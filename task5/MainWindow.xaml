<Window x:Class="task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock FontSize="16" Margin="0,30,0,0" HorizontalAlignment="Center">Логин</TextBlock>
            <TextBox Name="tbLogin" FontSize="16" Margin="0,0,0,10" Width="150"></TextBox>
            <TextBlock FontSize="16" HorizontalAlignment="Center">Пароль</TextBlock>
            <TextBox Name="tbPassowrd" FontSize="16" Width="150"></TextBox>
            <Button Name="authButton" FontSize="16" Width="120" Margin="0,20" Click="authButton_Click">Авторизация</Button>
        </StackPanel>
    </Grid>
</Window>
